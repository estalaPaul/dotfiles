general {
    colors = true
    interval = 5
}

order += "wireless wlp0s20f3"
order += "disk /"
order += "battery 0"
order += "cpu_usage"
order += "tztime local"

wireless wlp0s20f3 {
    format_up = "W: (%quality at %essid) %ip"
    format_down = "W: down"
}

battery 0 {
    format = "%status %percentage %remaining"
}

tztime local {
    format = "%Y-%m-%d %H:%M:%S"
}

cpu_usage {
    format = "CPU %usage"
}

disk "/" {
    format = "MEM %avail"
}
